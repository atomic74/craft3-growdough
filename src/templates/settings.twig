{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: "Donations URL"|t,
    id: 'donationsUrl',
    name: 'donationsUrl',
    instructions: 'Provide the **full** GrowDough donation URL. For testing on beta use _https://beta.growdough.org/donate/{slug}_',
    placeholder: 'https://secure.growdough.org/donate/{slug}',
    value: (settings.donationsUrl is defined) ? settings.donationsUrl : '',
    errors: (settings.donationsUrl is defined) ? settings.getErrors('donationsUrl') : ''
}) }}

{{ forms.lightswitchField({
    label: "Test Mode Enabled"|t,
    id: 'testModeEnabled',
    name: 'testModeEnabled',
    instructions: "When enabled (green) the **Test Mode** will be enabled during checkout. This allows you to test the integration with GrowDough. The payments will be processed using the **Test Payments Gateway** and all the email confirmations and notifications will be sent to the **Test Email Recipient**."|t,
    on: (settings.testModeEnabled is defined) ? settings.testModeEnabled
}) }}
